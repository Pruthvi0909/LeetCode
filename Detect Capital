class Solution {
    public boolean detectCapitalUse(String word) {
        int allUpper=0;
        
        for(char c: word.toCharArray()){
            if(Character.isUpperCase(c)){
                allUpper++;
            }
        }
        
        
        
        if(word.toUpperCase().equals(word) || word.toLowerCase().equals(word) || (Character.isUpperCase(word.charAt(0))&&allUpper==1)){
        return true;
    }
        else{
            return false;
        }
    }
}
